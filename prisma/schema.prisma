generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id            Int            @id @default(autoincrement())
  nomeCliente   String
  idSite        String
  altura        String?
  endereco      String
  bairro        String
  numero        String
  cidade        String
  uf            String
  tecnico       String
  dataServico   DateTime
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?
  finishedAt    DateTime?
  tipoSite      String
  tipoEstrutura String
  photoAnalisys PhotoAnalisys?
}

model PhotoAnalisys {
  id       Int    @id @default(autoincrement())
  idReport Int    @unique
  report   Report @relation(fields: [idReport], references: [id])
  url      String
  name     String
}
